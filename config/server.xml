<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <featureManager>
    <!-- tag::servlet[] -->
        <feature>servlet-4.0</feature>
    <!-- end::servlet[] -->
    <!-- tag::springboot[]
        <feature>springBoot-2.0</feature> -->
    <!-- end::springboot[] -->
	<!-- tag::admincenter[] -->
	<!--	<feature>adminCenter-1.0</feature> -->
	<!-- end::admincenter[] -->
	<!-- tag::security - registry etc -->
		<feature>appSecurity-3.0</feature> 
	<!-- end::security - registry etc -->
		
	<!-- tag::JAX libraries -->	
		<feature>jaxrsClient-2.1</feature>
		<feature>jaxrs-2.1</feature>
	<!-- end::security - registry etc -->

	<!-- tag::SAML libraries -->	
		<feature>samlWeb-2.0</feature>
	<!-- end::SAML libraries -->		
	
		<feature>transportSecurity-1.0</feature>
		<feature>ssl-1.0</feature>
	
    </featureManager>

	<keyStore id="defaultKeyStore" password="password" />

	<samlWebSso20 
		id="defaultSP" 
		idpMetadata="/opt/ibm/wlp/usr/servers/defaultServer/resources/security/idpMetadata.xml" 
		mapToUserRegistry="No"
		spLogout="true"
		tokenReplayTimeout="1m"
		groupIdentifier="groups"
		>  
	</samlWebSso20>

	<!-- tag::BASIC User Registry for admin-->
	<basicRegistry id="basic">
		<user name="admin" password="adminpwd" />
		<group name="user">
			<member name="admin" />
		</group>
	</basicRegistry>
	<!-- end::BASIC User Registry -->
	
	<administrator-role>
		<user>admin</user>
		<user>peter.bradac@sk.ibm.com</user>
	</administrator-role>

