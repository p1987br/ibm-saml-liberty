    <!-- tag::httpport[] -->
    <httpEndpoint id="defaultHttpEndpoint"
				  host="*"
                  httpPort="8080"
                  httpsPort="9443" />
    <!-- end::httpport[] -->

	<!-- tag::application[] - deployed application
	<application 
		type="spring" 
		location="app.jar"
		name="myApp"
		context-root="rhocp"
	/>-->
	
	<!-- tag::application[] - deployed application -->
    <application 
		type="war" 
		location="samlJavaEEApp.war"
		name="samlJavaEEApp"
		context-root="rhocp-ee">

	<!-- tag::additional role binding[] -->
	    <application-bnd>
			<security-role name="user-contributor">
				  <group name="ext-contractor" access-id="group:http://www.okta.com/exk16hr5uy7dJkso24x7/ext-contractor"/>
				  <group name="ext-employee" access-id="group:http://www.okta.com/exk16hr5uy7dJkso24x7/ext-employee"/>
			</security-role>
			
			<security-role name="user-write">
				  <group name="ext-owner" access-id="group:http://www.okta.com/exk16hr5uy7dJkso24x7/ext-owner"/>
			</security-role>
			
			<security-role name="user-special">
				  <group name="ext-special" access-id="group:http://www.okta.com/exk16hr5uy7dJkso24x7/ext-special"/>
			</security-role>
			
			<security-role name="user-read">
                <special-subject type="ALL_AUTHENTICATED_USERS"/>
            </security-role>
			
		</application-bnd>
    </application>		

	<remoteFileAccess>
		<writeDir>${server.config.dir}</writeDir>
	</remoteFileAccess>

